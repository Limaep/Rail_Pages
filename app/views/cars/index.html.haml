%h1 Listing cars

%table
  %thead
    %tr
      %th Model
      %th Make
      %th Owner
      %th
      %th
      %th

  %tbody
    - @cars.each do |car|
      %tr
        %td= car.model
        %td= car.make
        %td= link_to car.game.name, game_path(car.game)
        %td= link_to 'Show', car
        %td= link_to 'Edit', edit_car_path(car)
        %td= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Car', new_car_path
